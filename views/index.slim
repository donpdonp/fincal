div.navbar
  div.navbar-inner
    div.container
      ul.nav
        li#menu-calendar
          a
            | Calendar
        li#menu-table
          a
            | Add

div#calendar
  | Count #{count}
  div#calendar-view

div#table.modal.hide.fade
  div.modal-body
    form method='post'
      fieldset
        | Transaction
        label Name
        input name='value[name]'
        label Date
        input#date name='value[date]'
        label Amount
        | $
        input name='value[amount]'
      input type='submit'

div#detail.modal.hide.fade
  div.modal-body
    div Value
    div#name
    div#date

    form#detail method='post'
      input name='action' type='hidden' value='delete'
      input type='submit' value='delete'
